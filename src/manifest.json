{
  "manifest_version": 3,
  "name": "Redmana",
  "version": "0.1.0",
  "description": "A Chrome extension to enhance the Redmine user experience, making it more like Asana.",
  "icons": {
    "16": "icons/redmana-16.png",
    "48": "icons/redmana-48.png",
    "128": "icons/redmana-128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["board-enhancer.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
